
<style>
body{
    background: url(images/bananas.png);

}

p{
    font-size: 150%;
    font-style: oblique;
}
.Eaten{

    font-size: 130%;
    font-style: italic
}
</style>




<div class="containter"></div>
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">

            <img src="images/urgers.jpg" alt="burger">
            <h1>Eat burgers</h1>

        </div>
        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each burgers_data}}
                {{#unless this.devoured}}
                <div class="col-xs-9 text-center uneaten">
                    FRESH {{this.burger_name}}
                </div>
                <div class="col-xs-3 text-center">
                    <form method="POST" action="/burgertime/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burgers_id" type="text" value={{this.id}}>
                        <br>
                        <button type="submit" class="btn btn-default">
                            EAAAAtt the damn burger
                        </button>
            
                    </form>
<br>
                </div>
                {{/unless}}

                {{/each}}
            </div>
        </div>
        <div class="col-xs-6 text-center" class="task">
            This is the burger graveyard <br>
            <img src="images/tombstone.jpg"alt="tombstone">
            <br>
            {{#each burgers_data}}
            {{#if this.devoured}}
           <p>R.I.P {{this.burger_name}}</p>
            {{/if}}
        {{/each}}
        <br>
        </div>
    </div>
</div>

<div class="containter">
    <div class="row">
        <div class="col-xs-12  enter_section eaten">
            <form action="/burgertime/create" method="POST">
            <input type="text" name="burger_name" class="form-control"
            value="" id="enter_text">
            <button type="submit" class="btn btn-primary" id="text-enter-button"> submit</button>
            <p>What burger do you want to Eat</p>
            </form>
        </div>
    </div>
</div>


<div class="containter">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <form action="/burgertime/resetburger" method="POST">
            
            <button type="submit" class="btn btn-primary" id="text-enter-button"> Revive Burgers</button>
            <p>I hope you enjoy this handlebars app</p>
            </form>
        </div>
    </div>
</div>